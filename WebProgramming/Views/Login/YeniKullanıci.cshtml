@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using WebProje5.Models
@model Kullanici
@{
    ViewData["Title"] = "YeniKullanıci";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" class="register-form" id="register-form" action="/Login/YeniKullanıci/">
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="kullanici_adi" id="name" placeholder="@localizer["name"]" />
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                        <input type="email" name="mail" id="email" placeholder="@localizer["mail"]" />
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="sifre" id="pass" placeholder="@localizer["pass"]" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>  <a href="#" class="term-service">@localizer["String1"]</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="@localizer["reg"]" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/web3/images/signup-image.jpg" alt="sing up image"></figure>
                <a href="/Login/KullanıcıGiris/" class="signup-image-link">@localizer["zaten"]</a>
            </div>
        </div>
    </div>
</section>