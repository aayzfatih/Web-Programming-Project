@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@using WebProje5.Models
@model List<Blog>

<div class="padding">
    <h4>@localizer["top10"]</h4>
    <ul class="list list-pad">

        @{int i = 0;}
        @foreach (var x in Model)
        {
            <li class="list-bg@{if (i % 2 == 0) {@i} } "><span>@{i++;} @i</span><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></li>
        }


    </ul>
    <a href="#" class="link1">See all hotels</a>
</div>